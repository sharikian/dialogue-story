{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "stripInternal": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
