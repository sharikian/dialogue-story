{
  "name": "dialogue-story",
  "version": "1.3.1",
  "description": "React + TypeScript dialogue UI (comic/arcade) with RTL support",
  "author": "Sharik (wacoinseig@gmail.com)",
  "license": "MIT",
  "type": "module",
  "main": "dist/dialogue-story.cjs.js",
  "module": "dist/dialogue-story.es.js",
  "exports": {
    ".": {
      "import": "./dist/dialogue-story.es.js",
      "require": "./dist/dialogue-story.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "import": "./dist/dialogue-story.css",
      "require": "./dist/dialogue-story.css"
    },
    "./*": "./dist/*"
  },
  "style": "dist/dialogue-story.css",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "public",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "pack:inspect": "npm pack --dry-run"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@fontsource/vazirmatn": "^5.2.8",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "^8.4.24",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6"
  }
}
